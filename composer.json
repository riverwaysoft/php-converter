{
    "name": "riverwaysoft/php-converter",
    "description": "PHP converter to TypeScript / Dart",
    "authors": [
        {
            "name": "Egor Gorbachev",
            "email": "7gorbachevm@gmail.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test:with-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit",
        "test:coverage-level": "vendor/bin/coverage-check ./coverage/clover.xml 87",
        "build-phar": "php -d phar.readonly=Off tools/phar-composer-1.4.0.phar build",
        "build-phar:test": "php php-converter.phar generate --from=./tests/Fixtures/ --to=.",
        "test:update-snapshots": "vendor/bin/phpunit -d --update-snapshots --no-coverage",
        "cs:src": "vendor/bin/php-cs-fixer fix src",
        "cs:tests": "vendor/bin/php-cs-fixer fix tests",
        "cs": ["@cs:src", "@cs:tests"],
        "phpstan": "vendor/bin/phpstan analyse src tests bin",
        "php-parser-dump": "vendor/bin/php-parse tests/Fixtures/NestedDto.php"
    },
    "require": {
        "php": ">=8.0",
        "nikic/php-parser": "^4.10",
        "webmozart/assert": "^1.10",
        "jfcherng/php-diff": "^6.10",
        "jawira/case-converter": "^3.4",
        "phpstan/phpdoc-parser": "^1.6",
        "doctrine/inflector": "^2.0",
        "composer/xdebug-handler": "^3.0"
    },
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {"Riverwaysoft\\PhpConverter\\": "src/"},
        "classmap": [
            "src"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/php-converter-ts"
    ],
    "require-dev": {
        "phpunit/phpunit": "^10",
        "spatie/phpunit-snapshot-assertions": "^5",
        "myclabs/php-enum": "^1.8",
        "friendsofphp/php-cs-fixer": "^3.0",
        "symfony/var-dumper": "^5.3|^6.0",
        "phpstan/phpstan": "^1.7",
        "rregeer/phpunit-coverage-check": "^0.3.1",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
